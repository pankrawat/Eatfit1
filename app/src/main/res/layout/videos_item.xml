<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/videoItemParent"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_220">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/bgVideoImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@mipmap/header_bg_01"
            android:scaleType="fitXY" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/play"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_centerInParent="true"
        android:src="@mipmap/video" />

    <TextView
        android:id="@+id/videoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="@dimen/dp_7.5"
        android:paddingLeft="@dimen/dp_7.5"
        android:text="How to \nExercises"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_32" />


</RelativeLayout>